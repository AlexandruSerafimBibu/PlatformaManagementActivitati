@model PlatformaManagementActivitati.ViewModels.AddTaskViewModel


<h2>Adauga task</h2>

@using (Html.BeginForm("SaveTask", "Task"))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Assignment.Name)
        @Html.TextBoxFor(m => m.Assignment.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Assignment.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Assignment.Descriere)
        @Html.TextBoxFor(m => m.Assignment.Descriere, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Assignment.Descriere)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Assignment.DataFinalizare)
        @Html.TextBoxFor(m => m.Assignment.DataFinalizare, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Assignment.DataFinalizare)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Assignment.UserResponsabilId)
        @Html.DropDownListFor(m => m.Assignment.UserResponsabilId, new SelectList(Model.PossibleResponsibleUsers, "Id", "UserName"), "Alege userul", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Assignment.UserResponsabilId)
    </div>
    @Html.HiddenFor(m => m.Assignment.Id)
    @Html.HiddenFor(m => m.Assignment.TeamId)
    @Html.HiddenFor(m => m.Assignment.DataStart)
    @Html.HiddenFor(m => m.Assignment.Status)
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Inapoi la echipa", "Index", "Project", new { id = Model.Assignment.TeamId }, new { @class = "btn btn-primary" })

}


