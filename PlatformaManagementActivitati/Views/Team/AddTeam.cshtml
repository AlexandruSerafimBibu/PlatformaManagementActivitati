@model PlatformaManagementActivitati.ViewModels.AddTeamViewModel

<h3>Adauga echipa</h3>

@using (Html.BeginForm("SaveNewTeam", "Team"))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Team.Name)
        @Html.TextBoxFor(m => m.Team.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Team.Name)
    </div>
    @Html.HiddenFor(m => m.Team.ProjectId)
    @Html.HiddenFor(m => m.Team.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}
